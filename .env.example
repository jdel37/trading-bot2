# ----------------------------------------------------------
# BROKER: Binance (OPTIONAL — crypto only fallback)
# Get keys at: https://www.binance.com/en/my/settings/api-management
# ----------------------------------------------------------
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# ----------------------------------------------------------
# TRADING SETTINGS
# ----------------------------------------------------------
# Which broker to use: alpaca | binance
BROKER=alpaca

# Trading mode: paper | live
TRADING_MODE=paper

# Comma-separated list of symbols to trade.
# Stocks:  AAPL,TSLA,MSFT,GOOGL
# Crypto:  BTC/USD,ETH/USD,SOL/USD
# Forex:   EUR/USD,GBP/USD
SYMBOLS=BTC/USD,ETH/USD,AAPL,TSLA

# Timeframe for OHLCV bars: 1Min | 5Min | 15Min | 1Hour | 1Day
TIMEFRAME=5Min

# How many bars to fetch for indicator computation
BAR_LIMIT=100

# How often the bot checks the market (cron syntax)
# Every 5 minutes:  */5 * * * *
# Every 1 minute:   * * * * *
# Every 1 hour:     0 * * * *
CRON_SCHEDULE=*/5 * * * *

# ----------------------------------------------------------
# STRATEGY
# ----------------------------------------------------------
# Which strategy to use: movingAverage | rsi | macd
STRATEGY=rsi

# Moving Average strategy settings
EMA_FAST=9
EMA_SLOW=21

# RSI strategy settings
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70

# MACD strategy settings
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9

# ----------------------------------------------------------
# RISK MANAGEMENT
# ----------------------------------------------------------
# Max % of equity to risk per trade (e.g. 0.02 = 2%)
RISK_PER_TRADE=0.02

# Stop-loss percentage below entry price (e.g. 0.03 = 3%)
STOP_LOSS_PCT=0.03

# Take-profit percentage above entry price (e.g. 0.06 = 6%)
TAKE_PROFIT_PCT=0.06

# Maximum number of simultaneous open positions
MAX_POSITIONS=5

# ----------------------------------------------------------
# DASHBOARD SERVER
# ----------------------------------------------------------
PORT=3000
